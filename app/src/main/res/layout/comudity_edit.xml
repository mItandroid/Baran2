<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layoutDirection="rtl">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp">
        <TextView
            android:id="@+id/comudity_edit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="عنوان کالا اینجا قرار دارد"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="دسته بندی کالا"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/comudity_edit_title"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="قیمت کالا"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/comudity_edit_title"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/comudity_edit_del_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#xe808;"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/comudity_edit_edit_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#xe808;"
            android:layout_toRightOf="@id/comudity_edit_del_icon"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp"/>
    </RelativeLayout>

</LinearLayout>